<!-- writing the template -->
<!DOCTYPE html>
<html>
  <head>

    <meta charset="utf-8">
    <title>Friendr</title>

    <!-- BOOTSTRAP -->
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">

    <!-- JAVASCRIPTZ -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
    <script src="../public/scripts/angular.js"></script>

  </head>
  <body>

  <body ng-app="friendApp" ng-controller="profileCtrl">





    <!-- START FORM -->
    <form ng-submit="addProfile()">
      <!-- username -->
      Age<br/>
      <input type="text" ng-model="age">
      <br/>
      <br/>

      Location<br/>
      <input type="text" ng-model="location">

      <!-- gender -->
      Gender<br/>
      <input type="radio" name="gender" value="Male" ng-model="gender">Male
      <input type="radio" name="gender" value="Female" ng-model="gender">Female
      <input type="radio" name="gender" value="Other" ng-model="gender">Other
      <input type="radio" name="gender" value="Prefer Not to Say" ng-model="gender">Prefer Not to Say
      <br/>
      <br/>

      What kind of friendships are you looking for?<br/>
      <label ng-repeat="friend_type in friend_types">
        <input type="checkbox" name="selectedFriendTypes[]" value="{{friend_type.desc}}" ng-model="friend_type.selected">
        {{friend_type.desc}}
        <br/>
      </label>
      <br/>
      <br/>

      <!-- interests -->
      What are your interests?<br/>
      <input type="text" ng-model="interests">
      <br>
      <button type="submit">Submit</button>
    </form>
    <!-- END FORM -->

    <!-- START MATCH VIEWS -->
    <div ng-repeat="profile in profiles">
      {{profile.username}}<br/>
      {{profile.location}}<br/>
      {{profile.gender}}<br/>
      {{profile.interests}}<br/>
      <div ng-repeat="friend_type in profile.friend_types" ng-show="friend_type.selected == true">
        {{friend_type.desc}}<br/>
      </div>
      {{profile.about}}<br/>
    </div>
    <!-- END MATCH VIEWS -->

  </body>
</html>
